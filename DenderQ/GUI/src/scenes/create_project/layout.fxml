<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scenes.create_project.Controller">
   <children>
      <FlowPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="600.0">
               <children>
                  <Label text="%lbl.project_name">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="tfProjectName" prefWidth="300.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <padding>
                  <Insets left="20.0" top="20.0" />
               </padding>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="600.0">
               <children>
                  <Label text="%lbl.project_path">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField prefWidth="300.0" fx:id="tfProjectPath">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#clickedShowDirChooser" text="%btn.browse" />
               </children>
               <padding>
                  <Insets left="20.0" top="20.0" />
               </padding>
            </HBox>
            <ButtonBar prefHeight="40.0" prefWidth="550.0">
              <buttons>
                <Button id="btnCreateProject" fx:id="btnCreateProject" mnemonicParsing="false" text="%btn.create_project" onAction="#clickedCreateProject"/>
              </buttons>
               <FlowPane.margin>
                  <Insets top="200.0" />
               </FlowPane.margin>
            </ButtonBar>
         </children></FlowPane>
   </children>
</AnchorPane>
